# .docker/.env
# Domain Configuration
DOMAIN=hargile.eu
ADDITIONAL_DOMAINS=www.hargile.eu

# Email for Let's Encrypt notifications
EMAIL=gogolus2000@gmail.com

# OpenLiteSpeed Configuration
OLS_VERSION=latest
OLS_ADMIN_USER=admin
# OLS_ADMIN_PASS should be set via Docker secrets or a secure method
# OLS_ADMIN_PASS=securepassword123

# SSL Configuration
SSL_FORCE_RENEWAL=0
SSL_CHALLENGE_TYPE=webroot
SSL_RENEWAL_DAYS=30

# Docker Configuration
CONTAINER_NAME_PREFIX=hargile
TZ=Europe/Brussels

# Performance Tuning
OLS_MAX_CONNECTIONS=10000
OLS_WORKER_PROCESSES=1

# Next.js Configuration
NODE_ENV=production
NEXT_DEBUG=false
